{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "VC",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
			{
				"name": "keyword.control.vc",
				"match": "\\b(if|while|for|break|continue|return)\\b"
			},
			{
				"name": "keyword.type.vc",
				"match": "\\b(boolean|int|float|void)\\b"
			},
			{
				"name": "keyword.operator.vc",
				"match": "\\b(\\+|-|\\*|/|%|<|>|<=|>=|==|!=|&&|\\|\\||!|=)\\b"
			},
			{
				"name": "keyword.boolval.vc",
				"match": "\\b(true|false)\\b"
			},
			{
				"name": "keyword.separator.vc",
				"match": "\\b(,|;|\\(|\\)|\\[|\\]|\\{|\\})\\b"
			}
		]
		},
		"strings": {
			"name": "string.quoted.double.vc",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.vc",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.vc"
}